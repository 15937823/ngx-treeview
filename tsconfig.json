{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/lib",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "files": [
    "src/lib/index.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "skipMetadataEmit": true
  }
}